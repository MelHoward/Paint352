<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Paint.PaintCanvas"
        mc:Ignorable="d"
        Title="PaintCanvas" Height="450" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid x:Name="paintGrid" Background="#FFB2BEF1" Margin="0,0,0,0">
        <InkCanvas x:Name="canv" Margin="0,60,0,0"/>
        <ComboBox  HorizontalAlignment="Left" Margin="304,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Default" HorizontalAlignment="Left" Width="118.4" Selected="ComboBoxItem_Selected"/>
            <ComboBoxItem Content="Small" HorizontalAlignment="Left" Width="118.4" Selected="ComboBoxItem_Selected_1"/>
            <ComboBoxItem Content="Medium" HorizontalAlignment="Left" Width="118.4" Selected="ComboBoxItem_Selected_2"/>
            <ComboBoxItem Content="Large" HorizontalAlignment="Left" Width="118.4" Selected="ComboBoxItem_Selected_3"/>
        </ComboBox>

    </Grid>
</Window>
